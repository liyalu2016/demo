<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_card_padding">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/app_icon_width"
            android:layout_height="@dimen/app_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_app_music_downloader" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/app_icon"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/more"
            android:maxLines="2"
            android:minLines="2"
            android:text="Proton-Mail-"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/more"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/app_icon"
            android:layout_below="@+id/app_icon"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/dots_vertical" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/app_name"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="4.8"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/score"
            android:layout_alignTop="@+id/score"
            android:layout_below="@+id/app_name"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/score"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/score"
            android:layout_alignRight="@+id/app_icon"
            android:layout_alignTop="@+id/score"
            android:layout_below="@+id/more"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="FREE"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>