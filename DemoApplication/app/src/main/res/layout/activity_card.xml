<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_app_music_downloader"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/app_name"
                android:text="Music Downloader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/app_icon"
                android:layout_toLeftOf="@+id/more"
                android:textSize="18sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/app_author"
                android:text="Harry Connor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/app_icon"
                android:layout_toLeftOf="@+id/more"
                android:layout_below="@+id/app_name"
                android:textSize="14sp"
                android:singleLine="true"
                />

            <ImageButton
                android:id="@+id/more"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/dots_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/app_name"
                android:layout_alignBottom="@+id/app_name"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:layout_marginRight="3dp"
                />

            <View
                android:id="@+id/split_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/lighter_gray"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/app_icon"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                />

            <ImageButton
                android:id="@+id/star1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/split_line"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:src="@drawable/star_outline"
                android:background="@android:color/transparent"
                />

            <ImageButton
                android:id="@+id/star2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/split_line"
                android:scaleType="fitCenter"
                android:layout_toRightOf="@+id/star1"
                android:src="@drawable/star_outline"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                />

            <ImageButton
                android:id="@+id/star3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/split_line"
                android:scaleType="fitCenter"
                android:layout_toRightOf="@+id/star2"
                android:src="@drawable/star_outline"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                />

            <ImageButton
                android:id="@+id/star4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/split_line"
                android:scaleType="fitCenter"
                android:layout_toRightOf="@+id/star3"
                android:src="@drawable/star_outline"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                />

            <ImageButton
                android:id="@+id/star5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/split_line"
                android:scaleType="fitCenter"
                android:layout_toRightOf="@+id/star4"
                android:src="@drawable/star_outline"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                />


            <TextView
                android:text="SKIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_icon"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/star1"
                android:layout_alignTop="@+id/star1"
                android:layout_alignBottom="@+id/star1"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>